{
  "name": "idesktopcast",
  "version": "0.1.0",
  "author": "nazo",
  "license": "MIT",
  "main": "./dist/production/main.js",
  "build": {
    "appId": "idesktopcast",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/production"
    ]
  },
  "scripts": {
    "dev": "run-p serve aspida",
    "aspida": "aspida -w",
    "serve": "webpack serve --config ./webpack.dev.js --hot --color",
    "build": "webpack --config ./webpack.prod.js",
    "format": "prettier --write **/*.{js,ts,tsx}",
    "lint": "eslint . --ext ts --ext tsx --fix",
    "depgraph": "depcruise --config ./.dependency-cruiser.js -T dot src | dot -T svg | depcruise-wrap-stream-in-html > dependency-graph.html && depcruise --config ./.dependency-cruiser.js -T dot src | dot -T svg > dependencygraph.svg"
  },
  "dependencies": {
    "@aspida/axios": "^1.6.0",
    "@chakra-ui/icons": "^1.0.3",
    "@chakra-ui/react": "^1.1.5",
    "@emotion/react": "^11.1.4",
    "@emotion/styled": "^11.0.0",
    "@mdi/js": "^5.9.55",
    "@mdi/react": "^1.4.0",
    "axios": "^0.21.1",
    "dayjs": "^1.10.4",
    "fast-copy": "^2.1.1",
    "focus-visible": "^5.2.0",
    "framer-motion": "^3.7.0",
    "history": "^5.0.0",
    "immer": "^8.0.1",
    "jotai": "^0.15.0",
    "platform": "^1.3.6",
    "rc-slider": "^9.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-router-dom": "^5.2.0",
    "react-use-websocket": "^2.5.0",
    "use-resize-observer": "^7.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.1",
    "@babel/preset-react": "^7.12.10",
    "@babel/preset-typescript": "^7.13.0",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.4.3",
    "@types/platform": "^1.3.3",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "aspida": "^1.6.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "css-loader": "^5.1.1",
    "dependency-cruiser": "^9.23.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-loader": "^2.1.1",
    "html-webpack-plugin": "^5.2.0",
    "husky": "^5.1.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-refresh": "^0.9.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.2.2",
    "webpack": "^5.24.2",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ],
    "*.@(js)": [
      "yarn format"
    ]
  }
}
